# Database
# Local PostgreSQL: postgresql://user:password@localhost:5432/database
# Supabase Local Dev: postgresql://postgres:postgres@127.0.0.1:54322/postgres
# Supabase Cloud: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/statviz"

# Authentication
# Generate JWT_SECRET: openssl rand -base64 32
JWT_SECRET="your-secret-key-min-32-characters-long"
ADMIN_USERNAME="ahiya"

# Generate ADMIN_PASSWORD_HASH_BASE64:
# Step 1: Generate bcrypt hash
#   node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('your-password', 10).then(hash => console.log('Hash:', hash))"
# Step 2: Base64 encode the hash (prevents .env parsing issues with $ characters)
#   node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('your-password', 10).then(hash => console.log('Base64:', Buffer.from(hash).toString('base64')))"
#
# Example output:
#   Hash: $2a$10$38I44kf7NpdIEemehC4ChuP.DYi4GzooAqM45Q0qMgx3qq4ORm5Rm
#   Base64: JDJhJDEwJDM4STQ0a2Y3TnBkSUVlbWVoQzRDaHVQLkRZaTRHem9vQXFNNDVRMHFNZ3gzcXE0T1JtNVJt
#
# Use the Base64 value below:
ADMIN_PASSWORD_HASH_BASE64="JDJhJDEwJGV4YW1wbGUtcmVwbGFjZS13aXRoLXJlYWwtYmFzZTY0LWVuY29kZWQtaGFzaA=="

# File Storage
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"

# S3 (optional - only if STORAGE_TYPE=s3)
# S3_BUCKET="your-bucket-name"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"

# Application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NODE_ENV="development"
